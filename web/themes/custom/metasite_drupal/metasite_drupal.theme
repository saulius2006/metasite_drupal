<?php

/**
 * @file
 * Functions to support theming in the metasite_drupal theme.
 */

/**
 * Implements hook_preprocess_HOOK().
 */
function metasite_drupal_preprocess_node(array &$variables) {

  $variables['content']['form']['submit']['#attributes']['class'] = ['btn', 'btn-primary'];
  $variables['content']['form']['decline']['#attributes']['class'] = ['btn'];
}
